---
import Starfield from "@components/Starfield.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
        <Starfield />
        <main>
            <div class="slide-show">
                <slot />
                <input type="hidden" name="slide-index" value={0} />
            </div>
        </main>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        background-color: black;
        color: white;
        font-family:
            Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans", Arial,
            sans-serif;

        font-size: 24px;
        box-sizing: border-box;
    }

    main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px;
        box-sizing: border-box;
    }

    .slide-show {
        z-index: 1;
        background-color: rgba(0, 0, 0, 0.5);
        max-width: 90vw;
        max-height: 90vh;
        aspect-ratio: 16 / 9; /* Standard presentation ratio */
        overflow: hidden;

        height: 100%;
        width: 100%;

        border: 1px dashed #ffffff44;
    }
</style>

<script>
    const url = window.location.href;
    const slideOrder = [
        "title",
        "about-me",
        "concepts",
        "astro",
        "why",
        "more-why",
        "how",
    ];

    const slideSlug = url.split("/")[4];
    const currentIndex = slideOrder.indexOf(slideSlug);

    const getNextSlide = () => {
        if (currentIndex + 1 <= slideOrder.length - 1) {
            return slideOrder[currentIndex + 1];
        }
    };

    const getPrevSlide = () => {
        if (currentIndex - 1 >= 0) {
            return slideOrder[currentIndex - 1];
        }
    };

    document.addEventListener("keyup", function (event) {
        if (event.key === "n") {
            event.preventDefault();
            if (getNextSlide()) {
                window.location.href = `/slides/${getNextSlide()}`;
            }
        } else if (event.key === "p") {
            event.preventDefault();
            if (getPrevSlide()) {
                window.location.href = `/slides/${getPrevSlide()}`;
            }
        }
    });
</script>
